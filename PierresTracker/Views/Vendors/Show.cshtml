@using PierresTracker.Models;

<h3>Here are all the orders with this vendor:</h3>

@if (@Model["orders"].Count == 0)
{
  <h3>No orders have been added yet!</h3>
}

<ol>
  @foreach (Order order in @Model["orders"])
  {
    <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title</a></li>
  }
</ol>

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order</a></p>

<form action='/vendors/@Model["vendor"].Id/' method="post">
<button type="submit">Delete all orders belonging @Model["vendor"].Name</button>
</form>

<p><a href='/vendors'>Return to vendor list</a></p>
<p><a href='/'>Return to Main Page</a></p>